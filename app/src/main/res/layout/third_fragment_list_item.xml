<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp"
    android:layout_margin="8dp">
<GridLayout
    android:layout_width="fill_parent"
    android:layout_margin="20dp"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:columnCount="2"
    android:layout_row="2">
    <TextView
        android:id="@+id/thi_fg_cid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:text="系统结构"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:layout_column="1"
        android:layout_gravity="right"
        >
        <TextView
            android:id="@+id/thi_fg_ness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="必修"
            android:layout_marginRight="8dp"
            />
        <ToggleButton
            android:id="@+id/thi_fg_tb"
            android:layout_width="25dp"
            android:layout_height="25dp"
            style="@style/nesstogg"
            android:checked="false"
            android:background="?android:colorBackground"
            android:textOff=""
            android:layout_marginRight="8dp"
            android:textOn="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thi_fg_tname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="郑宇"
            />

        <TextView
            android:id="@+id/thi_fg_ctime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="20dp"
            android:text="周一1-2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        >
        <Button
            android:id="@+id/thi_fg_btn_ok"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:background="@drawable/btnsharp"
            android:text="确认"
            android:textSize="14dp"
            android:layout_marginRight="20dp"
            android:textColor="#ededed"/>

        <Button
            android:id="@+id/thi_fg_btn_delete"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:background="@drawable/btnsharp_1"
            android:text="取消"
            android:textSize="14dp"
            android:textColor="#ededed" />

    </LinearLayout>



</GridLayout>
    </android.support.v7.widget.CardView>